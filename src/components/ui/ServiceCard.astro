---
import { Image } from "astro:assets";
import Card from "./Card.astro";

import gob from "../../assets/icon6.svg";
import wob from "../../assets/icon7.svg";

/* 
1. White card with green title and green on black icon 
2. Green card with white title and green on black icon
3. Black card with white title and white on black icon
*/

const { index, title, titleTop, titleBottom, number, description, img, alt, link } = Astro.props;
---

<Card isUnderline={true}>
  <div
    class=`w-full sm:h-full p-8 pt-[px] ${index === 1 ? 'bg-white  pixpix0w' : index === 2 ? 'bg-green border-green  pixpix0g' : 'bg-dark border-dark text-white  pixpix0d'}`
  >

  <h3 class=`flex flex-col col-span-2 lg:col-span-1 mb-4`>
    <span class=`w-full text-center uppercase ${number === 1 ? 'blackhead' : 'whitehead'}`
      >{titleTop}</span
    ></h3>

  
    <h1 class="font-light uppercase text-center size-48px mb-[0px]">{title}</h1>
    <p class=" clear-both uppercase text-center mb-[0px]">{description}</p>
  
   


  
   <div class=` mt-4 mb-4 gap-6 p-10 ${number === 1 ? 'blackhead' : 'whitehead'}`>

    
    
  <picture
class="w-full col-span-1 h-full grid place-items-center"
>
<Image
  src={img}
  alt={alt}
  class=" overflow-visible grid place-items-center" 
/>
</picture>

</div>
<p>{titleBottom}</p>
<a href={link} target="_blank">
<button class=` font-bold btn-primary mt-4 w-full ${titleTop ===  'Collaborations' ? 'hidden' : 'block'}` >Learn More</button>
</a>
</div> 
</Card>

<style>
  .custom-grid {
    grid-template: auto auto;
  }
</style>
